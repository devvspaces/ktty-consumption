# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
GRACEFUL_SHUTDOWN_TIMEOUT_MS=10000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=ktty_user
DB_PASSWORD=secure_password
DB_NAME=ktty_companions
DB_MAX_CONNECTIONS=20

# Blockchain Configuration
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
OWNER_PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234
DEPLOYMENT_BLOCK=18000000
CONFIRMATIONS_REQUIRED=1
RPC_RETRY_ATTEMPTS=3
RPC_RETRY_DELAY_MS=1000
RPC_TIMEOUT_MS=30000

# Batch Processing Configuration
MAX_BATCH_SIZE=10
BATCH_TIMEOUT_MS=2000
PROCESSING_INTERVAL_MS=100
MAX_RETRIES=3
RETRY_DELAY_MS=5000
EXPONENTIAL_BACKOFF=true
MAX_GAS_PRICE=100000000000
GAS_MULTIPLIER=1.2

# Event Processing Configuration
BLOCK_RANGE_LIMIT=1000
CATCHUP_BATCH_SIZE=100
POLLING_INTERVAL_MS=5000
RECONNECT_DELAY_MS=1000
MAX_RECONNECT_ATTEMPTS=10

# Token Mapping Configuration
TOKEN_MAPPING_FILE_PATH=./src/data/tokenMapping.json
RELOAD_MAPPING_ON_CHANGE=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_ENABLED=true
ALERT_CONSECUTIVE_FAILURES=5
ALERT_PROCESSING_DELAY_MS=60000